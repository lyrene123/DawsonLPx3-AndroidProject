<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/appDescriptionRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <TextView
            style="@style/AppTheme.header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aboutHeader"
            android:text="@string/About"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appDescriptionRL">
        <RelativeLayout
            android:id="@+id/appRL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                style="@style/AppTheme.Title"
                android:id="@+id/ourAppTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="@string/our_app"/>
            <TextView
                style="@style/AppTheme.Text_M"
                android:id="@+id/appDescrip"
                android:background="@drawable/shadow_background"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ourAppTitle"
                android:text="@string/app_description"/>
            <TextView
                style="@style/AppTheme.Title"
                android:id="@+id/courseTitle"
                android:layout_below="@id/appDescrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="@string/courseid"/>
            <TextView
                style="@style/AppTheme.Meet_Team_Style"
                android:id="@+id/meetTeamTitle"
                android:layout_below="@id/courseTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="@string/meet_team"/>

            <HorizontalScrollView
                android:id="@+id/hsv"
                android:layout_below="@id/meetTeamTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:measureAllChildren="false"
                android:scrollbars="none" >
                <LinearLayout
                    android:id="@+id/innerLay"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/lyreneLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <FrameLayout
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:orientation="vertical"
                            android:background="@xml/border">

                            <ImageView
                                android:id="@+id/lyreneIV"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:src="@drawable/lyrene" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center"
                                android:background="@color/black"
                                android:alpha=".5">
                                <TextView
                                    style="@style/AppTheme.Meet_Team_Style"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:text="@string/lyrene"/>
                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/pengLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <FrameLayout
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:orientation="vertical"
                            android:background="@xml/border">

                            <ImageView
                                android:id="@+id/pengIV"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:src="@drawable/kim" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center"
                                android:background="@color/black"
                                android:alpha=".5">
                                <TextView
                                    style="@style/AppTheme.Meet_Team_Style"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:text="@string/peng"/>
                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/philLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <FrameLayout
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:orientation="vertical"
                            android:background="@xml/border">

                            <ImageView
                                android:id="@+id/philIV"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:src="@drawable/phil" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center"
                                android:background="@color/black"
                                android:alpha=".5">
                                <TextView
                                    style="@style/AppTheme.Meet_Team_Style"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:text="@string/phil"/>
                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/peterLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <FrameLayout
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:orientation="vertical"
                            android:background="@xml/border">

                            <ImageView
                                android:id="@+id/peterIV"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:src="@drawable/peter" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center"
                                android:background="@color/black"
                                android:alpha=".5">
                                <TextView
                                    style="@style/AppTheme.Meet_Team_Style"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:text="@string/peter"/>
                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>