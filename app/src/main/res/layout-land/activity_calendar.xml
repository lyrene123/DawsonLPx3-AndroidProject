<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dawsonlpx3.CalendarActivity">


    <EditText
        android:id="@+id/dateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/date"/>
    <Spinner
        android:id="@+id/startTimeSpinner"
        android:layout_below="@id/dateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="@string/startTime"></Spinner>
    <Spinner
        android:id="@+id/endTimeSpinner"
        android:layout_below="@id/startTimeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="@string/endTime"></Spinner>
    <EditText
        android:id="@+id/eventEditText"
        android:layout_below="@id/endTimeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/event"/>
    <Button
        android:layout_below="@id/eventEditText"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"/>
</RelativeLayout>
