<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dawsonlpx3.FindTeacherActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <TextView
            style="@style/AppTheme.Title"
            android:id="@+id/findTeacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/findTeacher"/>

        <LinearLayout
            android:id="@+id/firstnameLL"
            android:layout_below="@+id/radioLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                style="@style/AppTheme.Text_M"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/firstname"
                android:textAlignment="textEnd" />

            <EditText
                style="@style/AppTheme.Text_M"
                android:id="@+id/firstnameEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lastnameLL"
            android:layout_below="@id/firstnameLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                style="@style/AppTheme.Text_M"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/lastname"
                android:textAlignment="textEnd" />

            <EditText
                style="@style/AppTheme.Text_M"
                android:id="@+id/lastnameEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/radioLL"
            android:layout_below="@id/findTeacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/likeRadioBtn"
                    android:layout_centerVertical="true"
                    android:text="@string/like"/>
                <RadioButton
                    android:id="@+id/likeRadioBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:layout_toLeftOf="@id/exactRadioBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/exact"/>
                <RadioButton
                    android:id="@+id/exactRadioBtn"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"/>
            </RelativeLayout>
        </LinearLayout>
        <Button
            android:layout_below="@id/lastnameLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/search"/>
    </RelativeLayout>

</RelativeLayout>
