<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.dawsonlpx3.canceled_class_feature.ShowCancelFragment">

    <TextView
        style="@style/AppTheme.Title"
        android:id="@+id/classCancelTitle"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/classCancel"/>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/classCancelTitle"
        android:layout_centerHorizontal="true"
        android:weightSum="3">

    <ImageView
        android:id="@+id/noclassIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:layout_weight="1"
        android:src="@drawable/noclass" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <LinearLayout
            android:id="@+id/titleLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                style="@style/AppTheme.Text_M"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/title"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/titleTextView"
                style="@style/AppTheme.Text_M"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/sampleName" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/courseLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleLL"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                style="@style/AppTheme.Text_M"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/courseSection"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/courseTextView"
                style="@style/AppTheme.Text_M"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/sampleName" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/timeLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/courseLL"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                style="@style/AppTheme.Text_M"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/time"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/timeTextView"
                style="@style/AppTheme.Text_M"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/sampleName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/timeLL"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                style="@style/AppTheme.Text_M"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/teacher"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/teacherTextView"
                style="@style/AppTheme.Text_M"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/sampleName" />
        </LinearLayout>

    </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
