<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Title">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="AppTheme.Meet_Team_Style">
        <item name="android:textSize">22sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="AppTheme.Text_M">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="AppTheme.Text_L">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">13dp</item>
    </style>
    <style name="AppTheme.Text_XL">
        <item name="android:textSize">78sp</item>
        <item name="android:padding">0dp</item>
    </style>
    <style name="AppTheme.Bg_Transparent">
        <item name="android:background">@color/maastrict_blue</item>
        <item name="android:alpha">.8</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>
    <style name="AppTheme.Text_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">0dp</item>
    </style>
    <string name="AppTheme.Error">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </string>
    <style name="AppTheme.List_Item">
        <item name="android:textSize">25sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">10.0sp</item>
    </style>
    <style name="AppTheme.Spinner_Item">
        <item name="android:textSize">25sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="AppTheme.header">
        <item name="android:paddingTop">60dp</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppTheme.Settings">
        <item name="android:textSize">25sp</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>
</resources>
